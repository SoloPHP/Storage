{
  "name": "solophp/storage",
  "type": "library",
  "description": "Simple file-based storage system for storing string data using key-value pairs.",
  "keywords": ["php", "storage", "key-value", "file storage", "data storage", "simple storage"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Storage\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/",
    "test": "phpunit tests/"
  }
}
